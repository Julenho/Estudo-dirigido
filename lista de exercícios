##### EXERCÍCIO 1 #####									
										
import math									
a = 2*4 == 24/3									
b = (15 % 4) < (19 % 6)								
c = (2 < 15) != (8 == 8)							
d = True or False						
e = 2**2 == math.pow(2,2)
f = False and ((7/2) > 3.5)
g = (math.ceil(2.5) == 3) and (math.sqrt(9) == 3)

print("valor a", a)
print("valor b", b)
print("valor c", c)
print("valor d", d)
print("valor e", e)
print("valor f", f)
print("valor g", g)

