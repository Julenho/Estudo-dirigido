##### EXERCÍCIO 2 #####

m = float(input("digite o valor em metros "))

print("o valor em milímetros é ", m*1000)

---------------------------------------------------------------------------------
##### EXERCÍCIO 3 #####

dias = float(input("escreva a quantidade de dias "))
horas = float(input("escreva a quantidade de horas "))
minutos = float(input("escreva a quantidade de minutos "))
seg = float(input("escreva a quantidade em segundos "))
total = (dias*86400)+(horas*3600)+(minutos*60)+(seg)

print("o total em segundos é", total)

---------------------------------------------------------------------------------
##### EXERCÍCIO 4 #####

sal = float(input("digite o valor do salário "))
aum = float(input("digite o aumento em porcentagem "))
va_al = sal*aum/100
nsal = va_al + sal

print("o valor aumentado equivale em R$", va_al)
print("o valor do novo salário é", nsal)

---------------------------------------------------------------------------------
##### EXERCÍCIO 5 #####

mrc = float(input("digite o preço da mercadoria"))
desc = float(input("digite o percentual de desconto"))
des = mrc*desc/100
pap = mrc-des

print("o valor do desconto é", des )
print("o valor total do produto é", pap)

